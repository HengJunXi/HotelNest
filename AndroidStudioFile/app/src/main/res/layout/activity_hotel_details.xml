<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_details">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:fillViewport="true"
        android:background="@drawable/frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/images_layout"
                    android:layout_width="415dp"
                    android:layout_height="280dp"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/hotel_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/airbnb_cereal_bold"
                android:text="Hotel Name"
                android:textColor="#1F1F1F"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <TextView
                android:id="@+id/hotel_detail_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="City, Malaysia"
                android:textColor="#8E8B8B"
                app:layout_constraintStart_toStartOf="@+id/hotel_detail_name"
                app:layout_constraintTop_toBottomOf="@+id/hotel_detail_name" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="Location"

                android:textColor="#261F1F"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <TextView
                android:id="@+id/hotel_detail_address"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="Address"
                android:textColor="#8E8B8B"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="Summary"
                android:textColor="#261F1F"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/hotel_detail_address" />

            <TextView
                android:id="@+id/hotel_detail_office_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="Office Hour:"
                android:textColor="#8E8B8B"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <TextView
                android:id="@+id/hotel_detail_description"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="description"
                android:textColor="#8E8B8B"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/hotel_detail_office_hour" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="Amenities"
                android:textColor="#261F1F"
                app:layout_constraintStart_toStartOf="@+id/hotel_detail_office_hour"
                app:layout_constraintTop_toBottomOf="@+id/hotel_detail_description" />
            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:text="Rooms"
                android:textColor="#261F1F"
                app:layout_constraintStart_toStartOf="@+id/hotel_detail_office_hour"
                app:layout_constraintTop_toBottomOf="@+id/amenities_layout_3" />

            <LinearLayout
                android:id="@+id/amenities_layout_1"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/textView28"
                app:layout_constraintTop_toBottomOf="@id/textView28">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/amenities_layout_2"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/amenities_layout_1"
                app:layout_constraintTop_toBottomOf="@id/amenities_layout_1">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/amenities_layout_3"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/amenities_layout_2"
                app:layout_constraintTop_toBottomOf="@id/amenities_layout_2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView29">
                <ListView
                    android:id="@+id/room_listing_listview"
                    android:layout_width="380dp"
                    android:layout_height="320dp"
                    android:background="#FFFFFF"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    android:fadingEdge="none"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:layout_marginTop="10dp"
                    >

                </ListView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/room_listing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amenities_layout_3">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="125dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/hotel_detail_city"
                app:layout_constraintTop_toBottomOf="@+id/hotel_detail_city">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_star" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_star" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_star" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_star" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_star" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:srcCompat="@drawable/location" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/booking_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM0"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:textColor="#010101"
        app:layout_constraintTop_toBottomOf="@+id/nested_scroll"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pernight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="per night"
        android:fontFamily="@font/airbnb_cereal_medium"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/booking_total_price"
        app:layout_constraintStart_toEndOf="@id/booking_total_price"/>

    <Button
        android:id="@+id/book_button"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Book Now"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button_with_background_color"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/nested_scroll"
        app:layout_constraintStart_toEndOf="@+id/pernight"/>

</androidx.constraintlayout.widget.ConstraintLayout>